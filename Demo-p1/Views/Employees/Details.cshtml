@model Employee

<h1>Employee Details</h1>

<div class="form-group">
    <label class="col-form-label">Employee ID</label>
    <input readonly class="form-control" value="@Model.Id" />
</div>
<div class="form-group">
    <label class="col-form-label">Name</label>
    <input readonly class="form-control" value="@Model.Name" />
</div>
<div class="form-group">
    <label class="col-form-label">Email</label>
    <input readonly class="form-control" value="@Model.Email" />
</div>
<div class="form-group">
    <label class="col-form-label">Address</label>
    <input readonly class="form-control" value="@Model.Address" />
</div>
<div class="form-group">
    <label class="col-form-label">Age</label>
    <input readonly class="form-control" value="@Model.Age" />
</div>
<div class="form-group">
    <label class="col-form-label">Phone</label>
    <input readonly class="form-control" value="@Model.Phone" />
</div>
<div class="form-group">
    <label class="col-form-label">Salary</label>
    <input readonly class="form-control" value="@Model.Salary" />
</div>
<div class="form-group">
    <label class="col-form-label">Hire Date</label>
    <input readonly class="form-control" value="@Model.HireDate.ToString("yyyy-MM-dd")" />
</div>
<div class="form-group">
    <label class="col-form-label">Date of Creation</label>
    <input readonly class="form-control" value="@Model.DateOfCreation.ToString("yyyy-MM-dd")" />
</div>
<div class="form-group">
    <label class="col-form-label">Image Name</label>
    <input readonly class="form-control" value="@Model.ImageName" />
</div>
<div class="form-group">
    <label class="col-form-label">Is Active</label>
    <input readonly class="form-control" value="@(Model.IsActive ? "Yes" : "No")" />
</div>
<div class="form-group">
    <label class="col-form-label">Is Deleted</label>
    <input readonly class="form-control" value="@(Model.IsDeleted ? "Yes" : "No")" />
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
<a asp-action="Index" class="btn btn-light">Back to List</a>
