@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employees";
}
<a asp-action="Create" class="btn btn-success">Create New Employee</a>

@if (Model.Count() > 0)
{
    <h1>All Employees</h1>
    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.Address)</th>
                <th>@Html.DisplayNameFor(m => m.Age)</th>
                <th>@Html.DisplayNameFor(m => m.Phone)</th>
                <th>@Html.DisplayNameFor(m => m.Salary)</th>
                <th>@Html.DisplayNameFor(m => m.ImageName)</th>
                <th>@Html.DisplayNameFor(m => m.HireDate)</th>
                <th>@Html.DisplayNameFor(m => m.DateOfCreation)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Address</td>
                    <td>@employee.Age</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Salary</td>
                    <td>@employee.ImageName</td>
                    <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                    <td>@employee.DateOfCreation.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">
                            <i class="fas fa-eye"></i> Details
                        </a>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Are No Employees</h3>
    </div>
}
